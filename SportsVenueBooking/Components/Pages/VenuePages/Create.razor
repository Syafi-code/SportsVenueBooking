@page "/venues/create"
@using Microsoft.EntityFrameworkCore
@using SportsVenueBooking.Domain
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]
@inject IDbContextFactory<SportsVenueBooking.Data.SportsVenueBookingContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create New Venue</PageTitle>

<h1>Create New Venue</h1>
<hr />

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <EditForm method="post" Model="Venue" OnValidSubmit="AddVenue" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />

            <div class="mb-3">
                <label for="venuename" class="form-label">Venue Name:</label>
                <InputText id="venuename" @bind-Value="Venue.VenueName" class="form-control" placeholder="e.g., Basketball Court A" />
                <ValidationMessage For="() => Venue.VenueName" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="venuetype" class="form-label">Venue Type:</label>
                <InputSelect id="venuetype" @bind-Value="Venue.VenueType" class="form-select">
                    <option value="">-- Select Venue Type --</option>
                    <option value="Basketball">Basketball</option>
                    <option value="Swimming">Swimming</option>
                    <option value="Gym">Gym</option>
                    <option value="Football">Football</option>
                    <option value="Tennis">Tennis</option>
                    <option value="Badminton">Badminton</option>
                    <option value="Table Tennis">Table Tennis</option>
                    <option value="Squash">Squash</option>
                    <option value="Hall">Multi-Purpose Hall</option>
                </InputSelect>
                <ValidationMessage For="() => Venue.VenueType" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="schoolid" class="form-label">School:</label>
                <InputSelect id="schoolid" @bind-Value="Venue.SchoolID" class="form-select">
                    <option value="0">-- Select School --</option>
                    @foreach (var school in Schools)
                    {
                        <option value="@school.Id">@school.SchoolName</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Venue.SchoolID" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="capacity" class="form-label">Capacity:</label>
                <InputNumber id="capacity" @bind-Value="Venue.Capacity" class="form-control" placeholder="e.g., 20" />
                <ValidationMessage For="() => Venue.Capacity" class="text-danger" />
                <small class="text-muted">Maximum number of people</small>
            </div>

            <div class="mb-3">
                <label for="openinghours" class="form-label">Opening Hours:</label>
                <InputText id="openinghours" @bind-Value="Venue.OpeningHours" class="form-control" readonly />
                <small class="text-muted">All venues operate 9:00 AM - 9:00 PM</small>
            </div>

            <div class="mb-3">
                <label for="facilities" class="form-label">Facilities (Optional):</label>
                <InputTextArea id="facilities" @bind-Value="Venue.Facilities" class="form-control" rows="3" placeholder="e.g., Lockers, Showers, Air-conditioned" />
                <ValidationMessage For="() => Venue.Facilities" class="text-danger" />
            </div>

            <div class="alert alert-info" role="alert">
                <small><strong>Note:</strong> New venues are automatically set to "Available". You can change this later by editing the venue.</small>
            </div>

            <button type="submit" class="btn btn-primary">Create Venue</button>
            <a href="/venues" class="btn btn-secondary">Cancel</a>
        </EditForm>
    </div>
</div>

<div class="mt-3">
    <a href="/venues">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm(FormName = "create")]
    private Venue Venue { get; set; } = new();

    private List<School> Schools { get; set; } = new();
    private string? ErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        Schools = await context.Schools.OrderBy(s => s.SchoolName).ToListAsync();

        Venue.OpeningHours = "9:00 AM - 9:00 PM";
    }

    private async Task AddVenue()
    {
        ErrorMessage = null;

        if (string.IsNullOrWhiteSpace(Venue.VenueName))
        {
            ErrorMessage = "Please enter a venue name.";
            return;
        }

        if (string.IsNullOrWhiteSpace(Venue.VenueType))
        {
            ErrorMessage = "Please select a venue type.";
            return;
        }

        if (Venue.SchoolID == 0)
        {
            ErrorMessage = "Please select a school.";
            return;
        }

        if (Venue.Capacity <= 0)
        {
            ErrorMessage = "Please enter a valid capacity (must be greater than 0).";
            return;
        }

        using var context = DbFactory.CreateDbContext();

        // Always create venues as Available (admin can edit later to disable)
        Venue.IsAvailable = true;

        // Auto-fill system fields
        Venue.DateCreated = DateTime.Now;
        Venue.DateUpdated = DateTime.Now;
        Venue.CreatedBy = "Admin";
        Venue.UpdatedBy = "Admin";

        context.Venue.Add(Venue);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/venues");
    }
}