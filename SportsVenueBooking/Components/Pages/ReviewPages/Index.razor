@page "/reviews"
@using Microsoft.EntityFrameworkCore
@using SportsVenueBooking.Domain
@using SportsVenueBooking.Data
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@attribute [Authorize]
@inject IDbContextFactory<SportsVenueBooking.Data.SportsVenueBookingContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>@(IsAdmin ? "All Reviews" : "My Reviews")</PageTitle>

<h1>@(IsAdmin ? "All Reviews" : "My Reviews")</h1>
<hr />

@if (MyReviews.Count == 0)
{
    <div class="alert alert-info">
        <p>You haven't written any reviews yet!</p>
        <p><a href="/venues" class="btn btn-primary">Browse Venues to Review</a></p>
    </div>
}
else
{
    @foreach (var review in MyReviews)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <h5 class="card-title">@GetVenueName(review.VenueID)</h5>

                        <!-- Star Rating -->
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span style="color: @(i <= review.Rating ? "#ffc107" : "#e4e5e9"); font-size: 1.5rem;">★</span>
                            }
                            <span class="ms-2">(@review.Rating/5 stars)</span>
                        </div>

                        <!-- Review Date -->
                        <p class="text-muted small mb-2">
                            <strong>Reviewed on:</strong> @review.ReviewDate.ToString("MMMM dd, yyyy")
                        </p>

                        <!-- Show user email for admins -->
                        @if (IsAdmin && !string.IsNullOrEmpty(review.UserID))
                        {
                            <p class="text-muted small mb-2">
                                <strong>By:</strong> @GetUserEmail(review.UserID)
                            </p>
                        }
                        <!-- Comment -->
                        <p class="card-text">@review.Comment</p>


                    </div>

                    <!-- Action Buttons -->
                    <div class="ms-3">
                        @if (!IsAdmin || review.UserID == CurrentUserId)
                        {
                            <a href="@($"/reviews/edit?id={review.Id}")" class="btn btn-sm btn-warning mb-1">Edit</a>
                        }
                        <a href="@($"/reviews/delete?id={review.Id}")" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<Review> MyReviews = new();
    private Dictionary<int, string> VenueNames = new();
    private Dictionary<string, string> UserEmails = new();
    private string? CurrentUserId;
    private bool IsAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = await DbFactory.CreateDbContextAsync();

        // Get current user ID
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        CurrentUserId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        IsAdmin = user.IsInRole("Administrator");

        // Load venue names
        var venues = await context.Venue.ToListAsync();
        VenueNames = venues.ToDictionary(v => v.Id, v => v.VenueName ?? "Unknown Venue");

        // Load user emails (for admin view)
        var users = await context.Users.ToListAsync();
        UserEmails = users.ToDictionary(u => u.Id, u => u.Email ?? "Unknown User");

        // Load reviews - admins see all, students see only their own
        if (IsAdmin)
        {
            MyReviews = await context.Review
                .OrderByDescending(r => r.ReviewDate)
                .ToListAsync();
        }
        else
        {
            MyReviews = await context.Review
                .Where(r => r.UserID == CurrentUserId)
                .OrderByDescending(r => r.ReviewDate)
                .ToListAsync();
        }
    }

    private string GetVenueName(int venueId)
    {
        return VenueNames.TryGetValue(venueId, out var name) ? name : "Unknown Venue";
    }

    private string GetUserEmail(string? userId)
    {
        if (string.IsNullOrEmpty(userId)) return "Unknown User";
        return UserEmails.TryGetValue(userId, out var email) ? email : "Unknown User";
    }
}