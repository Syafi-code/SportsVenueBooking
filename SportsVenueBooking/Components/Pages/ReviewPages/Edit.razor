@page "/reviews/edit"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using SportsVenueBooking.Domain
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@attribute [Authorize(Roles = "Student")]
@inject IDbContextFactory<SportsVenueBooking.Data.SportsVenueBookingContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Edit Review</PageTitle>

<h1>Edit Your Review</h1>
<hr />

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

@if (Review == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <h5>@VenueName</h5>
            <p class="text-muted">Original review posted on: @Review.ReviewDate.ToString("MMMM dd, yyyy")</p>
        </div>
    </div>

    <EditForm Model="Review" OnValidSubmit="UpdateReview">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger" />

        <!-- RADIO BUTTONS FOR RATING -->
        <div class="mb-3">
            <label class="form-label">Rating: <strong>@SelectedRating stars</strong></label>

            <div class="mt-2">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rating" id="rating1"
                           checked="@(SelectedRating == 1)" @onchange="() => SelectedRating = 1" />
                    <label class="form-check-label" for="rating1">
                        ⭐ (1 star - Poor)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rating" id="rating2"
                           checked="@(SelectedRating == 2)" @onchange="() => SelectedRating = 2" />
                    <label class="form-check-label" for="rating2">
                        ⭐⭐ (2 stars - Fair)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rating" id="rating3"
                           checked="@(SelectedRating == 3)" @onchange="() => SelectedRating = 3" />
                    <label class="form-check-label" for="rating3">
                        ⭐⭐⭐ (3 stars - Good)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rating" id="rating4"
                           checked="@(SelectedRating == 4)" @onchange="() => SelectedRating = 4" />
                    <label class="form-check-label" for="rating4">
                        ⭐⭐⭐⭐ (4 stars - Very Good)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rating" id="rating5"
                           checked="@(SelectedRating == 5)" @onchange="() => SelectedRating = 5" />
                    <label class="form-check-label" for="rating5">
                        ⭐⭐⭐⭐⭐ (5 stars - Excellent)
                    </label>
                </div>
            </div>
        </div>

        <!-- Comment -->
        <div class="mb-3">
            <label for="comment" class="form-label">Your Review:</label>
            <InputTextArea id="comment" @bind-Value="Review.Comment" class="form-control" rows="5" />
        </div>

        <button type="submit" class="btn btn-primary">Update Review</button>
        <a href="/reviews" class="btn btn-secondary">Cancel</a>
    </EditForm>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private Review Review { get; set; } = default!;
    private string? VenueName;
    private string? ErrorMessage;
    private string? CurrentUserId;
    private int SelectedRating = 5;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        // Get current user
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        CurrentUserId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        // Load the review from database
        Review = await context.Review.FirstOrDefaultAsync(r => r.Id == Id);

        if (Review == null)
        {
            NavigationManager.NavigateTo("/reviews");
            return;
        }

        // Check if this review belongs to current user
        if (Review.UserID != CurrentUserId)
        {
            ErrorMessage = "You can only edit your own reviews!";
            return;
        }

        // Set SelectedRating from database
        SelectedRating = Review.Rating;

        // Load venue name
        var venue = await context.Venue.FirstOrDefaultAsync(v => v.Id == Review.VenueID);
        VenueName = venue?.VenueName ?? "Unknown Venue";
    }

    private async Task UpdateReview()
    {
        // Validate
        if (SelectedRating < 1 || SelectedRating > 5)
        {
            ErrorMessage = "Please select a rating between 1 and 5 stars.";
            return;
        }

        if (string.IsNullOrWhiteSpace(Review.Comment))
        {
            ErrorMessage = "Please write a review comment.";
            return;
        }

        using var context = DbFactory.CreateDbContext();

        // Load original from database
        var originalReview = await context.Review.FirstOrDefaultAsync(r => r.Id == Review.Id);

        if (originalReview == null)
        {
            ErrorMessage = "Review not found!";
            return;
        }

        // Update fields directly
        originalReview.Rating = SelectedRating; // Use SelectedRating variable
        originalReview.Comment = Review.Comment;
        originalReview.DateUpdated = DateTime.Now;
        originalReview.UpdatedBy = (await AuthenticationStateProvider.GetAuthenticationStateAsync()).User.Identity?.Name ?? "Student";

        context.Review.Update(originalReview);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/reviews", forceLoad: true);
    }
}